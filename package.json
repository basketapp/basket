{
    "name": "basket",
    "productName": "Basket",
    "version": "0.3.4",
    "description": "Container app to bundle multiple web apps",
    "main": "src/main.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/basketapp/basket.git"
    },
    "author": "Ricardo Cino <ricardo@cino.io>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/basketapp/basket/issues"
    },
    "homepage": "https://github.com/basketapp/basket#readme",
    "devDependencies": {
        "copy-webpack-plugin": "^6.0.3",
        "cross-env": "^7.0.2",
        "electron": "^9.2.0",
        "electron-builder": "^22.8.0",
        "electron-settings": "^4.0.2",
        "electron-updater": "^4.3.4",
        "eslint": "^7.7.0",
        "eslint-config-airbnb": "^18.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-friendly-formatter": "^4.0.1",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-html": "^6.0.3",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-vue": "^7.0.0-beta.2",
        "html-webpack-plugin": "^4.3.0",
        "laravel-mix": "^5.0.4",
        "node-sass": "^4.14.1",
        "resolve-url-loader": "^3.1.1",
        "sass-loader": "^7.3.1",
        "sass-resources-loader": "^2.1.0",
        "stylelint": "^13.6.1",
        "stylelint-config-recess-order": "^2.1.0",
        "stylelint-webpack-plugin": "^2.1.0",
        "ts-loader": "^7.0.5",
        "typescript": "^3.9.7",
        "vue": "^2.6.11",
        "vue-i18n": "^8.21.0",
        "vue-slicksort": "^1.1.3",
        "vue-template-compiler": "^2.6.11",
        "vuex": "^3.5.1",
        "yargs-parser": "^19.0.1"
    },
    "scripts": {
        "preinstall": "npx npm-force-resolutions",
        "start": "cross-env NODE_ENV=development electron ./build/main.js",
        "dev": "npm run development ",
        "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "watch": "npm run development -- --watch",
        "hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
        "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "prod": "npm run production && node ./build-helper/replaceMain.js",
        "dist": "npm run prod && electron-builder",
        "release": "npm run prod && electron-builder --publish always"
    },
    "dependencies": {
        "fs-extra": "^9.0.1",
        "uuid": "^8.3.0"
    },
    "resolutions": {
        "yargs-parser": "^18.1.3"
    }
}
